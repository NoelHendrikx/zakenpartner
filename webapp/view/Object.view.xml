<mvc:View
	controllerName="nl.peppieportals.overzichttijdgegevens.controller.Object"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:footerbar="sap.ushell.ui.footerbar">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false"
		busy="{objectView>/busy}"
		busyIndicatorDelay="{objectView>/delay}">

		<semantic:titleHeading>
			<Title text="Details" />
		</semantic:titleHeading>

		<semantic:headerContent>
			<ObjectNumber
			/>
		</semantic:headerContent>
		<semantic:content>

			<Table id="table2" width="auto" items="{ path: 'helper>/store/timedata' }" growing="true" growingScrollToLoad="true" updateFinished="onUpdateFinished">
				<columns>
					<Column><Text text="{i18n>naam}"/></Column>
					<Column>
						<Text text="{i18n>zoeknaam}"/></Column>
					<Column><Text text="{i18n>roepnaam}"/></Column>
					<Column><Text text="{i18n>actvarsaldo}"/></Column>
					<Column><Text text="{i18n>indicator}"/></Column>
					<Column><Text text="{i18n>grenswaarde}"/></Column>
					<Column><Text text="{i18n>contracturen}"/></Column>
					<Column><Text text="{i18n>planuren}"/></Column>
					<Column><Text text="{i18n>klokuren}"/></Column>
					<Column><Text text="{i18n>schrijfuren}"/></Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation" press="onPress">
						<cells>
							<ObjectIdentifier title="{helper>naam}"/>
							<ObjectAttribute text="{helper>zoeknaam}"/>
							<ObjectAttribute text="{helper>roepnaam}"/>
							<ObjectAttribute text="{helper>actvarsaldo}"/>
							<ObjectAttribute text="{helper>indicatie}"/>
							
							<ObjectAttribute text="{helper>grenswaardevariabelsaldo}"/>
							<ObjectAttribute text="{helper>contracturen}"/>
							<ObjectAttribute text="{helper>planuren}"/>
							<ObjectAttribute text="{helper>klokuren}"/>
							<ObjectAttribute text="{helper>schrijfuren}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>
		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press="onShareEmailPress"/>
		</semantic:sendEmailAction>

		<semantic:shareInJamAction>
			<semantic:ShareInJamAction id="shareInJam" visible="{FLP>/isShareInJamActive}" press="onShareInJamPress"/>
		</semantic:shareInJamAction>

		<semantic:saveAsTileAction>
			<footerbar:AddBookmarkButton id ="shareTile" title="{objectView>/saveAsTileTitle}" />
		</semantic:saveAsTileAction>

	</semantic:SemanticPage>

</mvc:View>