<mvc:View
	controllerName="nl.peppieportals.overzichttijdgegevens.controller.Object"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:footerbar="sap.ushell.ui.footerbar">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false"
		busy="{/ui/busy}"
		busyIndicatorDelay="0">

		<semantic:titleHeading>
			<Title text="Details van {helper>/store/timedetails/current/Ename} ({helper>/store/timedetails/current/Pernr})" />
		</semantic:titleHeading>

		<semantic:headerContent>
			<Text text="Periode : { path : 'helper>/store/timedetails/current/Begda', 
				type: 'sap.ui.model.odata.type.DateTime',
					formatOptions : {
						UTC : true,
						pattern: 'dd-MM-yyyy' 
					}
				} tot en met { path : 'helper>/store/timedetails/current/Endda', 
				type: 'sap.ui.model.odata.type.DateTime',
					formatOptions : {
						UTC : true,
						pattern: 'dd-MM-yyyy' 
					}
			}" />
		</semantic:headerContent>
		<semantic:content>

			<Table id="table2" width="auto" items="{ path: 'helper>/store/timedetails/results' }" growing="true" growingScrollToLoad="true" updateFinished="onUpdateFinished">
				<columns>
					<Column><Text text="{i18n>datum}"/></Column>
					<Column>
						<Text text="{i18n>dag}"/></Column>
					<Column><Text text="{i18n>week}"/></Column>
					<Column hAlign="Right"><Text text="{i18n>planuren}"/></Column>
					<Column hAlign="Right"><Text text="{i18n>klokuren}"/></Column>
					<Column hAlign="Right"><Text text="{i18n>schrijfuren}"/></Column>
					<Column hAlign="Right"><Text text="{i18n>ziekteuren}"/></Column>
				</columns>
				<items>
					<ColumnListItem >
						<cells>
							<Text text="{ path : 'helper>Datum', 
								type: 'sap.ui.model.odata.type.DateTime',
									formatOptions : {
										UTC : true,
										pattern: 'dd-MM-yyyy'
									}
							}"/>

							<ObjectAttribute text="{helper>Dag}"/>
							<ObjectAttribute text="{helper>Weeknummer}"/>
							<ObjectNumber number="{helper>PlanUren}" unit="uur"/>
							<ObjectNumber number="{helper>KlokUren}" unit="uur"/>
							<ObjectNumber number="{helper>SchrijfUren}" unit="uur"/>
							<ObjectAttribute text="{path : 'helper>ZiekteUren', formatter : '.formatter.formatZiekteUren'}" />
							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>

	</semantic:SemanticPage>

</mvc:View>